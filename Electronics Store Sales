 select name, item, price
 from customers
 join orders on customers.id=customer_id
 group by name;

 select Name, Email
 from customers;

 select Name, Item
 from customers
 join orders on customers.id=customer_id
 where item = "Iphone";

select Name, Price
from customers
join orders on customers.id=customer_id
where Price >300;
